{
  "name": "number-cruncher",
  "author": "Noran Diaconu",
  "version": "1.5.3",
  "license": "MIT",
  "bin": {
    "number-cruncher": "index.js"
  },
  "scripts": {
    "ng": "ng",
    "serve": "ng serve",
    "start": "start http://localhost:8080 && http-server ./docs -a localhost -p 8080",
    "build": "ng build",
    "watch": "ng build & http-server ./docs",
    "lint": "ng lint",
    "test": "ng test",
    "jest": "jest --coverage",
    "electron": "electron .",
    "electron-build": "electron-builder -w",
    "android-init": "ng build && npx cap add android && cordova-res android --skip-config --copy && npx cap open android",
    "android-changes": "ng build && npx cap sync && cordova-res android --skip-config --copy"
  },
  "dependencies": {
    "@angular/animations": "^14.2.12",
    "@angular/common": "^14.2.12",
    "@angular/compiler": "^14.2.12",
    "@angular/core": "^14.2.12",
    "@angular/platform-browser": "^14.2.12",
    "@angular/platform-browser-dynamic": "^14.2.12",
    "@capacitor/android": "^3.6.0",
    "http-server": "^14.1.1",
    "rxjs": "~6.6.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.10",
    "@angular-eslint/builder": "14.4.0",
    "@angular-eslint/eslint-plugin": "14.4.0",
    "@angular-eslint/eslint-plugin-template": "14.4.0",
    "@angular-eslint/schematics": "14.4.0",
    "@angular-eslint/template-parser": "14.4.0",
    "@angular/cli": "^14.2.10",
    "@angular/compiler-cli": "^14.2.12",
    "@capacitor/cli": "^3.6.0",
    "@capacitor/core": "^3.6.0",
    "@types/jasmine": "^4.3.1",
    "@types/jest": "^28.1.3",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "5.43.0",
    "@typescript-eslint/parser": "5.43.0",
    "cordova-res": "^0.15.4",
    "electron": "^22.1.0",
    "electron-builder": "^23.6.0",
    "eslint": "^8.28.0",
    "jest": "^29.5.0",
    "jest-preset-angular": "^12.2.2",
    "karma": "^6.4.1",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-jasmine": "^5.1.0",
    "typescript": "~4.6.4"
  },
  "main": "main.ts",
  "keywords": [
    "number",
    "cruncher"
  ],
  "homepage": "https://github.com/norandiaconu/number-cruncher#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/norandiaconu/number-cruncher.git"
  },
  "build": {
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": "x64"
        }
      ]
    }
  }
}
